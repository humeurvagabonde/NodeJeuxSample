$container = $("#container").notify();

now.receiveMessage = function(message) {
	$("#chatroom").append("<br>" + message);
}

now.receiveGameCreated = function(message) {
	$container.notify("create", "default", { title: 'Default Notification', text: message });
}

$( "#dialog-form" ).dialog({
	autoOpen: false,
	height: 300,
	width: 350,
	modal: true,
	buttons: {
		"Create an account": function() {
			now.createGame($("#name").val());
			$( this ).dialog( "close" );
		},
		Cancel: function() {
			$( this ).dialog( "close" );
		}
	},
	close: function() {
		
	}
});

$( "#create-game" )
	.button()
	.click(function() {
		$( "#dialog-form" ).dialog( "open" );
	});